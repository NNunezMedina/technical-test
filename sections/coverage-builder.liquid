<style>
  #{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  #{{ section.id }} .cb-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 16px;
  }

  #{{ section.id }} .cb-card {
    background: {{ section.settings.card_bg_color }};
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 10px 28px rgba(0,0,0,0.08);
  }

    #{{ section.id }} .cb-head {
    text-align: {{ section.settings.heading_alignment }};
    }

  #{{ section.id }} .cb-title {
    margin: 0;
    font-size: 28px;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .cb-subtitle {
    margin: 10px 0 0;
    font-size: 16px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    opacity: 0.85;
  }

  #{{ section.id }} .cb-grid {
    margin-top: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  #{{ section.id }} .cb-col {
    border: 1px dashed rgba(0,0,0,0.15);
    border-radius: 12px;
    padding: 16px;
    min-height: 160px;
  }

  #{{ section.id }} .cb-fieldset {
  border: 0;
  padding: 0;
  margin: 0 0 16px;
    }

    #{{ section.id }} .cb-legend {
    font-size: 14px;
    margin: 0 0 10px;
    color: {{ section.settings.text_color }};
    font-weight: 600;
    }

    #{{ section.id }} .cb-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    }

    #{{ section.id }} .cb-radio {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 4px 14px;
    border-radius: 12px;
    border: 1px solid rgba(0,0,0,0.14);
    cursor: pointer;
    user-select: none;
    background: transparent;
    transition: background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease;
    }

    /* hide native radio */
    #{{ section.id }} .cb-radio input {
    position: absolute;
    opacity: 0;
    }

    #{{ section.id }} .cb-radio:hover {
    border-color: rgba(0,0,0,0.28);
    background: {{ section.settings.selector_active_color }};
    color:white;
    }

    /* selected state */
    #{{ section.id }} .cb-radio:has(input:checked) {
    border-color: rgba(0,0,0,0.45);
    background: {{ section.settings.selector_active_color }};
    color:white;
    }

    /* optional: text weight when selected */
    #{{ section.id }} .cb-radio:has(input:checked) span {
    font-weight: 600;
    }

    #{{ section.id }} .cb-rec-image {
    width: 100%;
    height:auto;
    margin-bottom: 12px;
    border-radius: 12px;
    display: block;
    }

    #{{ section.id }} .cb-radio[aria-disabled="true"] {
    opacity: 0.45;
    cursor: not-allowed;
    }

    #{{ section.id }} .cb-radio[aria-disabled="true"]:hover {
    background: transparent;
    color: inherit;
    border-color: rgba(0,0,0,0.14);
    }

  @media (max-width: 768px) {
    #{{ section.id }} .cb-card {
      padding: 18px;
    }

    #{{ section.id }} .cb-title {
      font-size: 22px;
    }

    #{{ section.id }} .cb-grid {
    display: flex;
    flex-direction: column;
    }

    #{{ section.id }} 
    .cb-left { order: 2; 
    }

    #{{ section.id }} .cb-right 
    { order: 1; 
    }

    #{{ section.id }} .cb-radio {
    padding:4px 10px;
    }

    #{{ section.id }} .cb-kicker 
    { margin: 0 0 8px; font-size: 12px; opacity: .7; 
    }
    #{{ section.id }} .cb-rec-title 
    { margin: 0 0 8px; font-size: 18px; 
    }
    #{{ section.id }} .cb-rec-price 
    { margin: 0; font-weight: 600; 
    }
  }
</style>

<section id="{{ section.id }}">
  <div class="cb-wrapper">
    <div class="cb-card">
        {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="cb-head">
            {% if section.settings.title != blank %}
            <h2 class="cb-title">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.subtitle != blank %}
            <p class="cb-subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
        </div>
        {% endif %}

      <div class="cb-grid">
        <div class="cb-col cb-left">
            {% assign first_rule = section.blocks | where: "type", "rule" | first %}
            {% assign rec_product = first_rule.settings.product %}
            {% assign rec_variant = nil %}

            {% if rec_product %}
            {% if first_rule.settings.variant_title != blank %}
                {% assign target_variant_title = first_rule.settings.variant_title | downcase | strip %}
            {% for v in rec_product.variants %}
            {% assign v_title = v.title | downcase | strip %}
            {% if v_title == target_variant_title %}
                {% assign rec_variant = v %}
                {% break %}
            {% endif %}
            {% endfor %}
            {% endif %}
            {% unless rec_variant %}
                {% assign rec_variant = rec_product.selected_or_first_available_variant %}
            {% endunless %}
            {% endif %}
        <div class="cb-rec" data-rec>
            {% if rec_product and rec_variant %}
            <p class="cb-kicker">Recommended</p>
            {% if rec_product.featured_image %}
                <img
                class="cb-rec-image" data-rec-image
                src="{{ rec_product.featured_image | image_url: width: 600 }}"
                alt="{{ rec_product.featured_image.alt | escape }}"
                width="{{ rec_product.featured_image.width }}"
                height="{{ rec_product.featured_image.height }}"
                loading="lazy"
                >
            {% endif %}
            <h3 class="cb-rec-title" data-rec-title>{{ rec_product.title }}</h3>
            <p class="cb-rec-price" data-rec-price>{{ rec_variant.price | money }}</p>
            {% if rec_product.description != blank %}
            <div class="cb-rec-copy" data-rec-desc>
            {{ rec_product.description | strip_html | truncate: 180 }}
            </div>
            {% endif %}
            {% else %}
            {{ section.settings.left_col_text }}
            {% endif %}
        </div>
        </div>
        <div class="cb-col cb-right">
        <fieldset class="cb-fieldset">
        <legend class="cb-legend">{{ section.settings.step1_label }}</legend>
        <div class="cb-row">
            <label class="cb-radio">
            <input type="radio" name="trip_type_{{ section.id }}" value="single" checked>
            <span>{{ section.settings.trip_type_single_label }}</span>
            </label>

            <label class="cb-radio">
            <input type="radio" name="trip_type_{{ section.id }}" value="multi">
            <span>{{ section.settings.trip_type_multi_label }}</span>
            </label>
        </div>
        </fieldset>

        <fieldset class="cb-fieldset">
            <legend class="cb-legend">{{ section.settings.step2_label }}</legend>
            <div class="cb-row">
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="lt500" checked>
                <span>&lt;€500</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="500_1500">
                <span>€500–€1500</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="gt1500">
                <span>&gt;€1500</span>
            </label>
            </div>
        </fieldset>

        <fieldset class="cb-fieldset">
            <legend class="cb-legend">{{ section.settings.step3_label }}</legend>
            <div class="cb-row">
            <label class="cb-radio">
                <input type="radio" name="coverage_{{ section.id }}" value="standard" checked>
                <span>{{ section.settings.coverage_standard_label }}</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="coverage_{{ section.id }}" value="premium">
                <span>{{ section.settings.coverage_premium_label }}</span>
            </label>
            <label class="cb-radio">
            <input type="radio" name="coverage_{{ section.id }}" value="max" data-coverage-max>
            <span>{{ section.settings.coverage_max_label }}</span>
            </label>
            </div>
        </fieldset>
        </div>
        {%- comment -%} Coverage Builder rules (data only, hidden) {%- endcomment -%}
        <div class="cb-rules" hidden>
        {% for b in section.blocks %}
            {% if b.type == 'rule' and b.settings.product != blank %}
            {% assign p = b.settings.product %}

            {% assign vv = nil %}
            {% if b.settings.variant_title != blank %}
                {% assign target = b.settings.variant_title | downcase | strip %}
                {% for v in p.variants %}
                {% assign v_title = v.title | downcase | strip %}
                {% if v_title == target %}
                    {% assign vv = v %}
                    {% break %}
                {% endif %}
                {% endfor %}
            {% endif %}
            {% unless vv %}
                {% assign vv = p.selected_or_first_available_variant %}
            {% endunless %}

            <div
                data-rule
                data-default="{% if b.settings.is_default %}true{% else %}false{% endif %}"
                data-trip-type="{{ b.settings.trip_type }}"
                data-trip-cost="{{ b.settings.trip_cost }}"
                data-coverage="{{ b.settings.coverage }}"
                data-title="{{ p.title | escape }}"
                data-url="{{ p.url }}"
                data-image="{% if p.featured_image %}{{ p.featured_image | image_url: width: 600 }}{% endif %}"
                data-price="{{ vv.price | money | escape }}"
                data-description="{{ p.description | strip_html | truncate: 180 | escape }}"
            ></div>
            {% endif %}
        {% endfor %}
        </div>

        </div>
    </div>
  </div>
</section>

<script>
(() => {
  const root = document.getElementById('{{ section.id }}');
  if (!root) return;

  const rules = Array.from(root.querySelectorAll('[data-rule]'));
  if (!rules.length) return;

  const els = {
    title: root.querySelector('[data-rec-title]'),
    price: root.querySelector('[data-rec-price]'),
    desc:  root.querySelector('[data-rec-desc]'),
    img:   root.querySelector('[data-rec-image]'),
  };

  const getValue = (name) => root.querySelector(`input[name="${name}"]:checked`)?.value;

  const radios = {
  tripSingle: root.querySelector(`input[name="trip_type_{{ section.id }}"][value="single"]`),
  tripMulti:  root.querySelector(`input[name="trip_type_{{ section.id }}"][value="multi"]`),
  max:        root.querySelector(`input[name="coverage_{{ section.id }}"][value="max"]`),
  premium:    root.querySelector(`input[name="coverage_{{ section.id }}"][value="premium"]`),
  standard:   root.querySelector(`input[name="coverage_{{ section.id }}"][value="standard"]`)
};

const setDisabled = (input, disabled) => {
  if (!input) return;
  input.disabled = disabled;

  const label = input.closest('.cb-radio');
  if (label) label.setAttribute('aria-disabled', disabled ? 'true' : 'false');
};

const setRadio = (name, value) => {
  const input = root.querySelector(`input[name="${name}"][value="${value}"]`);
  if (input && !input.checked) input.checked = true;
};

const applyDefaultRuleIfAny = () => {
  const def = rules.find(r => r.dataset.default === 'true');
  if (!def) return;

  setRadio(`trip_type_{{ section.id }}`, def.dataset.tripType);
  // si tu rule usa trip_cost = any como default, NO lo marques en radios
  if (def.dataset.tripCost && def.dataset.tripCost !== 'any') {
    setRadio(`trip_cost_{{ section.id }}`, def.dataset.tripCost);
  }
  setRadio(`coverage_{{ section.id }}`, def.dataset.coverage);
};

  const pickRule = ({ tripType, tripCost, coverage }) => {
    const exact = rules.find(r =>
      r.dataset.tripType === tripType &&
      r.dataset.tripCost === tripCost &&
      r.dataset.coverage  === coverage
    );
    if (exact) return exact;

    // wildcard trip_cost = any
    const anyCost = rules.find(r =>
      r.dataset.tripType === tripType &&
      r.dataset.tripCost === 'any' &&
      r.dataset.coverage  === coverage
    );
    if (anyCost) return anyCost;

    // coverage fallback: max -> premium -> standard
    if (coverage === 'max') {
      return pickRule({ tripType, tripCost, coverage: 'premium' })
          || pickRule({ tripType, tripCost, coverage: 'standard' });
    }
    if (coverage === 'premium') {
      return pickRule({ tripType, tripCost, coverage: 'standard' });
    }

    // último fallback
    return rules[0] || null;
  };

  const render = (rule) => {
    if (!rule) return;

    if (els.title) els.title.textContent = rule.dataset.title || '';
    if (els.price) els.price.textContent = rule.dataset.price || '';
    if (els.desc)  els.desc.textContent  = rule.dataset.description || '';

    if (els.img) {
      const src = rule.dataset.image;
      if (src) {
        els.img.src = src;
        els.img.hidden = false;
      } else {
        els.img.hidden = true;
      }
    }

    // si luego agregas CTA, aquí guardas URL
    root.querySelector('[data-rec]')?.setAttribute('data-url', rule.dataset.url || '');
  };

  const syncMaxAvailability = () => {
  const tripType =
    root.querySelector(`input[name="trip_type_{{ section.id }}"]:checked`)?.value || 'single';

  const isSingle = tripType === 'single';

  // desactivar Max si es single
  setDisabled(radios.max, isSingle);

  // si estaba seleccionado Max y ahora es single → fallback
  if (isSingle && radios.max?.checked) {
    (radios.premium || radios.standard)?.click();
  }
};

  const update = () => {
    syncMaxAvailability();
    const tripType = getValue('trip_type_{{ section.id }}') || 'single';
    const tripCost = getValue('trip_cost_{{ section.id }}') || 'lt500';
    const coverage = getValue('coverage_{{ section.id }}') || 'standard';

    const rule = pickRule({ tripType, tripCost, coverage });
    render(rule);
  };

  root.addEventListener('change', (e) => {
    if (e.target?.matches('input[type="radio"]')) update();
  });

  applyDefaultRuleIfAny();
  update();
})();
</script>

