<style>
  #{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  #{{ section.id }} .cb-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 16px;
  }

  #{{ section.id }} .cb-card {
    background: {{ section.settings.card_bg_color }};
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 10px 28px rgba(0,0,0,0.08);
  }

    #{{ section.id }} .cb-head {
    text-align: {{ section.settings.heading_alignment }};
    }

  #{{ section.id }} .cb-title {
    margin: 0;
    font-size: 28px;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
  }

  #{{ section.id }} .cb-subtitle {
    margin: 10px 0 0;
    font-size: 16px;
    line-height: 1.5;
    color: {{ section.settings.text_color }};
    opacity: 0.85;
  }

  #{{ section.id }} .cb-grid {
    margin-top: 20px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }

  #{{ section.id }} .cb-col {
    border: 1px dashed rgba(0,0,0,0.15);
    border-radius: 12px;
    padding: 16px;
    min-height: 160px;
  }

  #{{ section.id }} .cb-fieldset {
  border: 0;
  padding: 0;
  margin: 0 0 16px;
    }

    #{{ section.id }} .cb-legend {
    font-size: 14px;
    margin: 0 0 10px;
    color: {{ section.settings.text_color }};
    font-weight: 600;
    }

    #{{ section.id }} .cb-row {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    }

    #{{ section.id }} .cb-radio {
    position: relative;
    display: inline-flex;
    align-items: center;
    padding: 4px 14px;
    border-radius: 12px;
    border: 1px solid rgba(0,0,0,0.14);
    cursor: pointer;
    user-select: none;
    background: transparent;
    transition: background-color 0.15s ease, color 0.15s ease, border-color 0.15s ease;
    }

    /* hide native radio */
    #{{ section.id }} .cb-radio input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
    }

    #{{ section.id }} .cb-radio:hover {
    border-color: rgba(0,0,0,0.28);
    background: {{ section.settings.selector_active_color }};
    color:white;
    }

    /* selected state */
    #{{ section.id }} .cb-radio:has(input:checked) {
    border-color: rgba(0,0,0,0.45);
    background: {{ section.settings.selector_active_color }};
    color:white;
    }

    /* optional: text weight when selected */
    #{{ section.id }} .cb-radio:has(input:checked) span {
    font-weight: 600;
    }

    #{{ section.id }} .cb-rec-image {
    width: 100%;
    height:auto;
    margin-bottom: 12px;
    border-radius: 12px;
    display: block;
    }

  @media (max-width: 768px) {
    #{{ section.id }} .cb-card {
      padding: 18px;
    }

    #{{ section.id }} .cb-title {
      font-size: 22px;
    }

    #{{ section.id }} .cb-grid {
    display: flex;
    flex-direction: column;
    }

    #{{ section.id }} 
    .cb-left { order: 2; 
    }

    #{{ section.id }} .cb-right 
    { order: 1; 
    }

    #{{ section.id }} .cb-radio {
    padding:4px 10px;
    }

    #{{ section.id }} .cb-kicker 
    { margin: 0 0 8px; font-size: 12px; opacity: .7; 
    }
    #{{ section.id }} .cb-rec-title 
    { margin: 0 0 8px; font-size: 18px; 
    }
    #{{ section.id }} .cb-rec-price 
    { margin: 0; font-weight: 600; 
    }
  }
</style>

<section id="{{ section.id }}">
  <div class="cb-wrapper">
    <div class="cb-card">
        {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="cb-head">
            {% if section.settings.title != blank %}
            <h2 class="cb-title">{{ section.settings.title }}</h2>
            {% endif %}

            {% if section.settings.subtitle != blank %}
            <p class="cb-subtitle">{{ section.settings.subtitle }}</p>
            {% endif %}
        </div>
        {% endif %}

      <div class="cb-grid">
        <div class="cb-col cb-left">
            {% assign first_rule = section.blocks | where: "type", "rule" | first %}
            {% assign rec_product = nil %}
            {% assign rec_variant = nil %}

            {% if first_rule and first_rule.settings.product != blank %}
            {% assign rec_product = all_products[first_rule.settings.product] %}
            {% endif %}

            {% if rec_product %}
            {% if first_rule.settings.variant_title != blank %}
                {% assign target_variant_title = first_rule.settings.variant_title | downcase | strip %}
            {% for v in rec_product.variants %}
            {% assign v_title = v.title | downcase | strip %}
            {% if v_title == target_variant_title %}
                {% assign rec_variant = v %}
                {% break %}
            {% endif %}
            {% endfor %}
            {% endif %}

            {% unless rec_variant %}
                {% assign rec_variant = rec_product.selected_or_first_available_variant %}
            {% endunless %}
            {% endif %}
        <div class="cb-rec" data-rec>
            {% if rec_product and rec_variant %}
            <p class="cb-kicker">Recommended</p>

            {% if rec_product.featured_image %}
                <img
                class="cb-rec-image"
                src="{{ rec_product.featured_image | image_url: width: 600 }}"
                alt="{{ rec_product.featured_image.alt | escape }}"
                width="{{ rec_product.featured_image.width }}"
                height="{{ rec_product.featured_image.height }}"
                loading="lazy"
                >
            {% endif %}

            <h3 class="cb-rec-title">{{ rec_product.title }}</h3>
            <p class="cb-rec-price">{{ rec_variant.price | money }}</p>

            {% if first_rule.settings.short_copy != blank %}
                <p class="cb-rec-copy">{{ first_rule.settings.short_copy }}</p>
            {% endif %}
            {% else %}
            {{ section.settings.left_col_text }}
            {% endif %}
        </div>
        </div>
        <div class="cb-col cb-right">
        <fieldset class="cb-fieldset">
            <legend class="cb-legend">{{ section.settings.step1_label }}</legend>
            <div class="cb-row">
            <label class="cb-radio">
                <input type="radio" name="trip_type_{{ section.id }}" value="single" checked>
                <span>{{ section.settings.trip_type_single_label }}</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="trip_type_{{ section.id }}" value="multi">
                <span>{{ section.settings.trip_type_multi_label }}</span>
            </label>
            </div>
        </fieldset>

        <fieldset class="cb-fieldset">
            <legend class="cb-legend">{{ section.settings.step2_label }}</legend>
            <div class="cb-row">
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="lt500" checked>
                <span>&lt;€500</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="500_1500">
                <span>€500–€1500</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="trip_cost_{{ section.id }}" value="gt1500">
                <span>&gt;€1500</span>
            </label>
            </div>
        </fieldset>

        <fieldset class="cb-fieldset">
            <legend class="cb-legend">{{ section.settings.step3_label }}</legend>
            <div class="cb-row">
            <label class="cb-radio">
                <input type="radio" name="coverage_{{ section.id }}" value="standard" checked>
                <span>{{ section.settings.coverage_standard_label }}</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="coverage_{{ section.id }}" value="premium">
                <span>{{ section.settings.coverage_premium_label }}</span>
            </label>
            <label class="cb-radio">
                <input type="radio" name="coverage_{{ section.id }}" value="max">
                <span>{{ section.settings.coverage_max_label }}</span>
            </label>
            </div>
        </fieldset>
        </div>
        </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Coverage Builder",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Find the best coverage for your trip"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Answer a few questions to get the ideal travel protection."
    },
    {
    "type": "select",
    "id": "heading_alignment",
    "label": "Title & subtitle alignment",
    "default": "left",
    "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
    ]
    },
    {
    "type": "textarea",
    "id": "left_col_text",
    "label": "Left column text",
    "default": "Recommended plan content goes here."
    },
    {
    "type": "textarea",
    "id": "right_col_text",
    "label": "Right column text",
    "default": "Selectors / inputs will go here."
    },
    { "type": "text", "id": "step1_label", "label": "Step 1 label", "default": "Trip Type" },
    { "type": "text", "id": "trip_type_single_label", "label": "Single trip label", "default": "Single trip" },
    { "type": "text", "id": "trip_type_multi_label", "label": "Multi-trip label", "default": "Multi-trip" },

    { "type": "text", "id": "step2_label", "label": "Step 2 label", "default": "Trip Cost Range" },

    { "type": "text", "id": "step3_label", "label": "Step 3 label", "default": "Coverage Level" },
    { "type": "text", "id": "coverage_standard_label", "label": "Standard label", "default": "Standard" },
    { "type": "text", "id": "coverage_premium_label", "label": "Premium label", "default": "Premium" },
    { "type": "text", "id": "coverage_max_label", "label": "Max label", "default": "Max" },
    {
      "type": "header",
      "content": "Styles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f7f4ef"
    },
    {
    "type": "color",
    "id": "card_bg_color",
    "label": "Card background color",
    "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#111111"
    },
    {
    "type": "color",
    "id": "selector_active_color",
    "label": "Selector active color",
    "default": "#1e5bff"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding top",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 48,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "default": 48,
      "unit": "px"
    }
  ],
  "blocks": [
  {
    "type": "rule",
    "name": "Mapping rule",
    "settings": [
      { "type": "product", "id": "product", "label": "Recommended product" },
      { "type": "text", "id": "variant_title", "label": "Variant title (optional)","default": "Standard" },
      { "type": "text", "id": "short_copy", "label": "Short copy", "default": "Short copy" }
    ]
    }
    ],
    "max_blocks": 20,
  "presets": [
    {
      "name": "Coverage Builder"
    }
  ]
}
{% endschema %}