<style>
  #{{ section.id }}.lh {
    padding: 0;
  }

  /* Wrapper two columns (desktop) */
  #{{ section.id }} .lh__wrap{
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1.3fr 1fr;
    align-items: stretch;
    min-height: 520px;
  }

  /* LEFT: Image */
  #{{ section.id }} .lh__media{
    position: relative;
    overflow: hidden;
    background: #e9eef5;
    {% if section.settings.image_desktop != blank %}
      background-image: url('{{ section.settings.image_desktop | image_url: width: 2200 }}');
    {% endif %}
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: 1;
  }

  /* RIGHT: White panel */
  #{{ section.id }} .lh__panel{
    position: relative;
  z-index: 2; 
  background: #fff;
  display: flex;
  align-items: center;
  overflow: visible; 
  margin-left: -70px;
  }

  /* Diagonal cut (white shape that overlaps the left edge) */
  #{{ section.id }} .lh__panel::before{
    content:"";
  position:absolute;
  top:0;
  left:0;
  width:120px;
  height:100%;
  background:#fff;
  transform: skewX(-12deg);
  transform-origin: top left;
  z-index: 0;
  }

  #{{ section.id }} .lh__content{
    position: relative;
    z-index: 1;
    padding: 48px 0 0 0;
    max-width: 470px;
    margin-left:40px;
    display:flex;
    flex-direction:column;
    align-items:flex-start;
    gap:24px;
  }

  #{{ section.id }} .lh__title{
    margin: 0;
    font-size: 44px;
    line-height: 1.1;
    font-weight: 800;
    color: {{ section.settings.title_color }};
    max-width: 470px;
  }

  #{{  section.id}} .lh__title-overlay {
    display:none;
  }

  #{{ section.id }} .lh__subtitle{
    font-size: 16px;
    line-height: 1.5;
    color: {{ section.settings.subtitle_color }};
    max-width: 420px;
    margin:0;
  }

  #{{ section.id }} .lh__actions{
    display: flex;
    flex-direction: row;
    gap: 12px;
  }

  #{{ section.id }} .lh__btn{
    text-decoration: none;
    padding: 12px 16px;
    border-radius: 14px;
    font-weight: 600;
    text-align: center;
    transition: all 180ms ease;
  }

  #{{ section.id }} .lh__btn--primary{
    background: #2761a1;
    color: #fff;
  }

  #{{ section.id }} .lh__btn--primary:hover{
    background: #fff;
    color: #2761a1;
    box-shadow: 0 10px 24px rgba(0,0,0,0.12);
  }

  #{{ section.id }} .lh__btn--secondary{
    background: transparent;
    color: #2761a1;
    border: 1px solid #2761a1;
  }

  #{{ section.id }} .lh__btn--secondary:hover{
    background: #2761a1;
    color: #fff;
  }

  @media (max-width: 1050px){
    #{{ section.id }} .lh__title{
    font-size: 40px;
   }
  }

  @media (max-width: 768px){

    #{{ section.id }} .lh__wrap{
     padding: 0;
    grid-template-columns: 1fr;
  }

    /* oculta el overlay que solo tiene título */
    #{{ section.id }} .lh__title-overlay{
      display: none !important;
    }

    /* convierte el panel en overlay dentro de la imagen */
    #{{ section.id }} .lh__media{
      position: relative; /* necesario para el overlay */
    }

    #{{ section.id }} .lh__panel{
      position: absolute;
      inset: auto;
      margin-left: 0;      /* quita el overlap de desktop */
      background: transparent;
      display: flex;
      align-items: center; /* panel abajo como tu ejemplo */
      padding: 16px;         /* margen interno del overlay */
      height:500px;
    }

    /* apaga la diagonal */
    #{{ section.id }} .lh__panel::before{
      display: none;
    }

    /* caja blanca/traslúcida del contenido */
    #{{ section.id }} .lh__content{
      width: 100%;
      margin-left: 0;
      padding: 16px 18px;
      background: rgba(255,255,255,0.92);
      box-shadow: 0 10px 26px rgba(0,0,0,0.12);
      border-radius:16px;
    }

    /* tipografía mobile */
    #{{ section.id }} .lh__title{
      font-size: 30px;
    }

    #{{ section.id }} .lh__actions{
      max-width: 100%;
    }

    #{{ section.id }} .lh__btn{
    line-height:110%;
  }
  }
</style>

<section id="{{ section.id }}" class="lh">
  <div class="lh__wrap">
    <div class="lh__media">
    </div>

      <div class="lh__panel">
      <div class="lh__content">
        {% if section.settings.title != blank %}
          <h1 class="lh__title">{{ section.settings.title }}</h1>
        {% endif %}

        {% if section.settings.subtitle != blank %}
          <p class="lh__subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}

        <div class="lh__actions">
          {% if section.settings.primary_cta_label != blank and section.settings.primary_cta_url != blank %}
            <a href="{{ section.settings.primary_cta_url }}" class="lh__btn lh__btn--primary">
              {{ section.settings.primary_cta_label }}
            </a>
          {% endif %}

          {% if section.settings.secondary_cta_label != blank and section.settings.secondary_cta_url != blank %}
            <a href="{{ section.settings.secondary_cta_url }}" class="lh__btn lh__btn--secondary">
              {{ section.settings.secondary_cta_label }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Diagonal (Basic)",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image (mobile)"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Travel without precautions"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color",
      "default": "#0b1220"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Your travel assistance in just one click."
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "SubTitle color",
      "default": "#0b1220"
    },
    {
      "type": "text",
      "id": "primary_cta_label",
      "label": "Primary CTA label",
      "default": "Get a Quote"
    },
    {
      "type": "url",
      "id": "primary_cta_url",
      "label": "Primary CTA link"
    },
    {
      "type": "text",
      "id": "secondary_cta_label",
      "label": "Secondary CTA label",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary CTA link"
    }
  ],
  "presets": [
    { "name": "Hero Diagonal (Basic)" }
  ]
}
{% endschema %}
